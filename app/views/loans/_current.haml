.outstanding_loan
  %h2 Pašreizējais aizņēmums
  .time_remaining
    .days= ( loan.maturity_date - Date.today ).to_i
    dienas līdz atmaksāšanai
  
  = form_for( loan, :url => repay_loan_path( loan ), :method => :post ) do |f|
    = f.submit "Atmaksāt #{loan.total} EUR", :class => "btn btn-primary submit"
  .or vai
  = form_for( loan ) do |f|
    .extend
      .field
        .label_wrap
          = f.label :days, "Pagarināt termiņu:"
          %span.presets
            %button{ :type => "button", :name => "duration_preset", :value => 7, :class => "btn-link" } 7 dienas
            %button{ :type => "button", :name => "duration_preset", :value => 14, :class => "btn-link" } 14 dienas
            %button{ :type => "button", :name => "duration_preset", :value => 30, :class => "btn-link" } 30 dienas
        .input_wrap
          = f.number_field :days, :class => "form-control primary"
          %span &nbsp;dienas
      .repayment
        Aizņēmums būs jāatmaksā 2. septembrī, kopējā summa 354 eiro
      .calendar
      .actions= f.submit "Pagarināt termiņu", :class => "btn btn-danger submit"
      .summary
        .line.maturity_date
          .name Atmaksāšanas datums:
          .value 2. septembris, 2015
        .line
          .name Kredīts:
          .value 300.00 eiro
        .line
          .name Komisija:
          .value 54.50 eiro
        .line
          .name Kopā:
          .value 354.40 eiro
        
